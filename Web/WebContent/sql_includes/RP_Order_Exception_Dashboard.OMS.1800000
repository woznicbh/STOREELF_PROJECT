  SELECT head.order_date,     ship.status_date,      status.description,     ROUND((sysdate - ship.status_date),2) AS days_aged,      trim(head.order_no) order_no,      trim(ship.shipment_no) shipment_no,      SUBSTR(ship.shipment_type,0,INSTR(ship.shipment_type,'_')-1) shipment_type,      ship.shipnode_key,       SUM(line.quantity) Quantity,      trim(per.first_name)      ||' '      ||trim(per.last_name)      ||' '      || trim(per.address_line1)      ||' '      ||trim(per.address_line2)      ||' '      || trim(per.address_line3)      ||' '      ||trim(per.address_line4)      ||' '      || trim(per.city)      ||' '      ||trim(per.state)      ||' '      ||trim(per.zip_code) AS Ship_To_Address    FROM yfs_shipment ship,      yfs_order_header head,      yfs_shipment_line line,      yfs_person_info per,     yfs_status status,   yfs_ship_node sn  WHERE ship.status               = '1100.03'     AND ship.status = status.status    AND status.process_type_key = 'ORDER_DELIVERY'    AND ship.document_Type        ='0001'     and ship.enterprise_code=   'STOREELF.COM'  AND ship.shipment_closed_flag = 'N'     AND ship.shipment_key         = line.shipment_key     AND line.order_header_key     =head.order_header_key     AND ship.to_address_key       =per.person_info_key     and ship.shipnode_key = sn.shipnode_key  and sn.node_type in ('RDC','STORE')  GROUP BY head.order_date,     ship.status_date,    status.description,     head.order_no,      ship.shipment_no,      SUBSTR(ship.shipment_type,0,INSTR(ship.shipment_type,'_')-1),      ship.shipnode_key,     trim(per.first_name)      ||' '      ||trim(per.last_name)      ||' '      || trim(per.address_line1)      ||' '      ||trim(per.address_line2)      ||' '      || trim(per.address_line3)      ||' '      ||trim(per.address_line4)      ||' '      || trim(per.city)      ||' '      ||trim(per.state)      ||' '      ||trim(per.zip_code)     HAVING ROUND((sysdate - ship.status_date),2) > 1    ORDER BY days_aged desc